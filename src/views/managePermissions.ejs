<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciar Permissões</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/manage-permissions.css">
</head>

<%- include('includes/navbar') %>

    <body>
        <h1>Gerenciar Permissões</h1>

        <table>
            <thead>
                <tr>
                    <th>Usuário</th>
                    <th>Email</th>
                    <th>Função</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>
                    <tr>
                        <td>
                            <%= user.username %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.role %>
                        </td>
                        <td>

                            <a href="/managePermissions/<%= user.id %>/edit">
                                <button type="button" <%=(user.role==='SUPERUSER' || user.role==='ADMIN' ) ? 'disabled'
                                    : '' %>>
                                    Editar Permissões
                                </button>
                            </a>


                            <form action="/managePermissions/<%= user.id %>/delete" method="POST"
                                style="display:inline;">
                                <button type="submit" <%=user.role==='SUPERUSER' ? 'disabled' : '' %>>
                                    Excluir
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <a href="/userControl">Voltar ao Controle de usuários</a>
    </body>

</html>